/* FORMAT THE LOADING DOTS */

.dots-container {
  display: flex;
  justify-content: center;
  margin: auto;

}

.outer-border {
  display: flex;
  justify-content: center;
  margin: auto 10px auto 10px;
  border-radius: 16px;
  height: 16px;
  width: 16px; /*MUST be an even number, so cant percentage it (else the borders might look uneven) */
  background-color: rgb(130, 130, 130);
  animation: pop $anim-duration alternate;
  animation-iteration-count: infinite;
}


.inner-border {

  display: flex;
  justify-content: center;
  margin: auto;
  border-radius: 100%;
  height: 80%;
  width: 80%;
  background-color: #111;
  
}

.outer-border.first {
  -webkit-animation-delay: $anim-duration;
  -moz-animation-delay: $anim-duration;
  animation-delay: $anim-duration;

}

.outer-border.second {
  -webkit-animation-delay: 1.5 * $anim-duration;
  -moz-animation-delay: 1.5 * $anim-duration;
  animation-delay: 1.5 * $anim-duration;

}

.outer-border.third {
  -webkit-animation-delay: 2 * $anim-duration;
  -moz-animation-delay: 2 * $anim-duration;
  animation-delay: 2 * $anim-duration;

}


