      <ol class="post-sidebar-menu">
          <% @posts_asc = Post %>
        <% @posts_asc.by_date_desc.each do |post| %>
            <% clean_post_title = strip_tags(post.title) %>
            <li><%= link_to content_tag(:span, clean_post_title), "/blog/#{post.id}", class: "post-link #{post.id}" %></li>
        <% end %>
      </ol>