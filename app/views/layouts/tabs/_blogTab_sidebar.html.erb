      <div class="post-sidebar-title">
          <span>Our posts,</span>
      </div>
      
      <ol class="post-sidebar-menu">
          <% @posts_asc = Post %>
        <% @posts_asc.by_date_desc.each do |post| %>
            <% clean_post_title = strip_tags(post.title) %>
            <li><%= link_to content_tag(:span, clean_post_title), "/blog/#{post.slug}", class: "post-link #{post.slug}" %></li>
        <% end %>
      </ol>