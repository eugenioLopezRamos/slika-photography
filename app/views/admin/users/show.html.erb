<% provide(:title, @user.name) %>

    <% if flash[:danger] %>
    <div class="notice" style="background-color:red;color:white"><%= flash[:danger] %></div>
    <% end %>
    
<%= @user.name %><br>
<%= @user.email %><br>
<%= "created at: #{@user.created_at}"%><br>
<%= "updated at #{@user.updated_at}" %><br>

<% if @user.posts.any? %>
<h3>Your posts</h3>

    <% @posts.each do |post| %>
       <ol class="posts"><%= link_to post.title,  admin_post_path(post) %></ol>
    <% end %>

<% end %>
<%= button_to "Create new post", new_admin_post_path, method: "get" %><br>

<% if logged_in? && current_user.admin %>
<%= button_to "Create new user", new_admin_user_path, method: "get" %><br>
<% end %>



<%= button_to "Log out", admin_logout_path, method: "delete" %>